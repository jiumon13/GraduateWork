{% extends 'CommonBundle::base.html.twig' %}

{% block title %}{{ page.meta.title }}{% endblock %}
{% block description %}{{ page.meta.description }}{% endblock %}
{% block keywords %}{{ page.meta.keywords }}{% endblock %}

{% block breadcrumb %}
    <!-- page-intro start-->
    <div class="page-intro" style="margin-top: 0;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home pr-10"></i><a href="/">Главная</a></li>
                        <li class="active">{{ page.article.title }}</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- page-intro end -->
{% endblock %}

{% block content %}
    <section class="main-container" style="margin-top: 0;">
        <div class="container">
            <div class="row">

                <!-- main start -->
                <div class="main col-md-12">

                    <!-- page-title start -->
                    <h1 class="page-title margin-top-clear">{{ page.article.title | raw }}</h1>
                    <div class="separator-2"></div>
                    <!-- page-title end -->


                    {{ page.article.content | raw }}

                </div>
                <!-- main end -->
            </div>
        </div>
    </section>
{% endblock %}