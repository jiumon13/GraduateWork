<form class="login-form form-horizontal" data-target="{{ target | default('') }}">
    <div class="form-group has-feedback">
        <label class="col-sm-4 control-label">Электронная почта</label>
        <div class="col-sm-8">
            <input name="login[email]" type="email" class="form-control" placeholder="">
            <i class="fa fa-envelope form-control-feedback"></i>
        </div>
    </div>
    <div class="form-group has-feedback">
        <label class="col-sm-4 control-label">Пароль</label>
        <div class="col-sm-8">
            <input name="login[password]" type="password" class="form-control" placeholder="">
            <i class="fa fa-lock form-control-feedback"></i>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-group btn-default">Вход</button>
        </div>
    </div>
</form>