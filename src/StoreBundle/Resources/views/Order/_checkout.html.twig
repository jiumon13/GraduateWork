{% extends 'CommonBundle::base.html.twig' %}

{% block breadcrumb %}
    <!-- page-intro start-->
    <div class="page-intro" style="margin-top: 0;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home pr-10"></i><a href="/">Главная</a></li>
                        <li class="active">Оформление заказа</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- page-intro end -->
{% endblock %}

{% block custom %}
    <script type="text/javascript" src="/js/checkout/checkout.js"></script>
{% endblock %}

{% block content %}
    <section class="checkout main-container" style="margin-top: 0;">
        <div class="container">
            <div class="row">
                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-12">

                    <!-- page-title start -->
                    <h1 class="page-title margin-top-clear">Оформление заказа</h1>

                    <div class="separator-2"></div>

                    <div class="alert alert-info" role="alert">
                        <ul class="margin-bottom-none padding-left-lg">
                            <li>Поля помеченные <small class="text-default">*</small> необходимо заполнить</li>
                        </ul>
                    </div>

                    <form role="form" class="form-horizontal" method="post">
                        <fieldset>

                            <!-- begin block of delivery -->
                            <div class="delivery">
                                <div class="row space-top">
                                    <div class="col-lg-4">
                                        <h2 class="title">Доставка</h2>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label for="service" class="col-md-4 control-label">
                                                Метод
                                                <small class="text-default">*</small>
                                            </label>
                                            <div class="col-md-8">
                                                <select class="form-control" id="service" name="order[delivery][service]" required>
                                                    <option value="nova_poshta">Новая почта</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="city" class="col-md-4 control-label">
                                                Город
                                                <small class="text-default">*</small>
                                            </label>
                                            <div class="col-md-8">
                                                <input type="text" class="form-control" id="city" name="order[delivery][city]" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="warehouse" class="col-md-4 control-label">
                                                Отделение
                                                <small class="text-default">*</small>
                                            </label>
                                            <div class="col-md-8">
                                                <input type="text" class="form-control" id="warehouse" name="order[delivery][warehouse]" required="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end block of delivery -->

                            <div class="receiver">
                                <div class="space"></div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <h2 class="title">Получатель</h2>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label for="firstname" class="col-md-4 control-label">
                                                Имя
                                                <small class="text-default">*</small>
                                            </label>
                                            <div class="col-md-8">
                                                <input name="order[user][firstname]" type="text" class="form-control" id="firstname" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="lastname" class="col-md-4 control-label">
                                                Фамилия
                                                <small class="text-default">*</small>
                                            </label>
                                            <div class="col-md-8">
                                                <input name="order[user][lastname]" type="text" class="form-control" id="lastname" required>
                                            </div>
                                        </div>
                                        {#<div class="form-group">#}
                                            {#<label for="warehouse" class="col-md-4 control-label">#}
                                                {#Отчество#}
                                                {#<small class="text-default">*</small>#}
                                            {#</label>#}
                                            {#<div class="col-md-8">#}
                                                {#<input type="text" class="form-control" id="warehouse">#}
                                            {#</div>#}
                                        {#</div>#}
                                        <div class="form-group">
                                            <label for="phone" class="col-md-4 control-label">
                                                Номер телефона
                                                <small class="text-default">*</small>
                                            </label>
                                            <div class="col-md-8">
                                                <input name="order[user][phone]" type="text" class="form-control" id="phone" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="account">
                                <div class="space"></div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <h2 class="title">Учетная запись</h2>
                                        <div>
                                            <a href="#">Зачем это нужно?</a>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" id="create-account" name="order[create_account]" checked>
                                                    Создать учетную запись
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="account-form">
                                            <div class="form-group">
                                                <label for="email" class="col-md-4 control-label">
                                                    Электронный адрес
                                                    <small class="text-default">*</small>
                                                </label>
                                                <div class="col-md-8">
                                                    <input name="order[user][email]" type="text" class="form-control" id="email" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="password" class="col-md-4 control-label">
                                                    Пароль
                                                    <small class="text-default">*</small>
                                                </label>
                                                <div class="col-md-8">
                                                    <input name="order[user][plain_password]" type="password" class="form-control" id="password" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-4 col-md-8">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input name="order[user][receive_mail]" type="checkbox">
                                                            Присылать уведомления о моих заказах, акциях и скидках
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </fieldset>

                        <div class="text-right">
                            <a href="#" class="btn btn-group btn-default"><i class="icon-left-open-big"></i> Назад</a>
                            <button type="submit" class="forward btn btn-group btn-default">
                                Продолжить <i class="icon-right-open-big"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <!-- main end -->

            </div>
        </div>
    </section>
{% endblock %}