{% extends 'CommonBundle::base.html.twig' %}

{% form_theme form 'CartBundle::theme_checkout.html.twig' %}

{% block content %}
    <section class="main-container" style="margin-top: 0;">
        <div class="container">
            <div class="row">
                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-12">
                    <!-- page-title start -->
                    <!-- ================ -->
                    <h1 class="page-title margin-top-clear">Оформление заказа</h1>
                    <!-- page-title end -->
                    <div class="separator-2"></div>
                    {{ form(form) }}

                    <fieldset>
                        <legend>Учетная запись</legend>
                        <form role="form" class="form-horizontal" id="payment-information">
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="mode" value="existing_user" checked="">
                                            Я постоянный покупатель
                                        </label>
                                    </div>
                                    <div class="space-bottom"></div>
                                </div>
                                <div class="col-lg-9">

                                    <p>Вход, используя существующую учетную запись</p>

                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Email<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Пароль<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="space"></div>

                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="mode" value="new_user">
                                            Я новый покупатель
                                        </label>
                                    </div>
                                    <div class="space-bottom"></div>
                                </div>
                                <div class="col-lg-9">

                                    <p>Создание новой учетной записи</p>

                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Имя<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Фамилия<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Телефон<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Email<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="space"></div>

                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="mode" value="existing_user" checked="">
                                            Без учетной записи
                                        </label>
                                    </div>
                                    <div class="space-bottom"></div>
                                </div>
                                <div class="col-lg-9">

                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Имя<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Фамилия<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="paymentEmail" class="col-md-3 control-label">Телефон<small class="text-default">*</small></label>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="email" class="form-control" id="paymentEmail" value="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </fieldset>

                </div>
                <!-- main end -->
            </div>
        </div>
    </section>
{% endblock %}