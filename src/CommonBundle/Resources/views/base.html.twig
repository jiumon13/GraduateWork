<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    {% set page = page(app.request.pathInfo) %}

    {% set _title = block('title') %}
    {% set _keywords = block('keywords') %}
    {% set _description = block('description') %}

    {% if page %}
        <title>{{ page.meta.title }} | {{ shop_name }}</title>
        <meta name="keywords" content="{{ page.meta.keywords }}">
        <meta name="description" content="{{ page.meta.description }}">
    {% else %}
        <title>{{ _title }} | {{ shop_name }}</title>
        <meta name="keywords" content="{{ _keywords }}">
        <meta name="description" content="{{ _description }}">
    {% endif %}

    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/jquery.bxslider.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/smoothproducts.css" rel="stylesheet">
    <link href="/css/select2.css" rel="stylesheet">
    <link href="/css/select2-bootstrap.css" rel="stylesheet">
</head>
<body>
<header>
    <div class="container">
        <div class="row">

            <!-- Logo -->
            <div class="col-lg-4 col-md-3 hidden-sm hidden-xs">
                <div class="well logo">
                    <a href="/">
                        TOP<span>  FIGHT</span>
                    </a>
                    <div>Online Store</div>
                </div>
            </div>
            <!-- End Logo -->

            <!-- Search Form -->
            <div class="col-lg-5 col-md-5 col-sm-7 col-xs-12">
                <div class="well">
                    <form action="">
                        <div class="input-group">
                            <input type="text" class="form-control input-search" placeholder="Enter something to search"/>
	                            <span class="input-group-btn">
	                                <button class="btn btn-default no-border-left" type="submit"><i class="fa fa-search"></i></button>
	                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <!-- End Search Form -->

            <!-- Shopping Cart List -->
            <div class="col-lg-3 col-md-4 col-sm-5">
                <div class="well">
                    <div class="btn-group btn-group-cart">
                        <button id="cartButton" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="pull-left"><i class="fa fa-shopping-cart icon-cart"></i></span>
                            <span class="pull-left" >Корзина: <span class="cart-items-quantity">0</span> товар(ов)</span>
                            <span class="pull-right"><i class="fa fa-caret-down"></i></span>
                        </button>
                        <ul class="dropdown-menu cart-content cart" role="menu">
                            <div id="cart-message" style="margin: 15px;">

                            </div>
                            <script type="text/html" data-template="cart-item">
                                <li>
                                    <a href="{{ path('products_show', {alias: '__alias__'}) }}">
                                        <b>__name__</b>
                                        <span>x__quantity__  __price__ __currency__</span>
                                    </a>
                                </li>
                            </script>
                            <script type="text/html" data-template="cart-total">
                                <li class="divider"></li>
                                <li><a href="{{ path('cart_show') }}">Total: __sum__ __currency__</a></li>
                            </script>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- End Shopping Cart List -->
        </div>
    </div>
</header>

